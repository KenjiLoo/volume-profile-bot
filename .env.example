# Binance testnet credentials
BINANCE_API_KEY=your_testnet_api_key
BINANCE_API_SECRET=your_testnet_api_secret
# Set to `true` to use Binance spot testnet (https://testnet.binance.vision)
BINANCE_USE_TESTNET=true
# Comma-separated symbols
SYMBOLS=BTCUSDT,ETHUSDT,XRPUSDT,SOLUSDT
# Polling interval in ms (3 seconds required by you)
POLL_INTERVAL_MS=3000
# Price bins for volume profile
PRICE_BINS=40
# Fair value area percentage (e.g., 0.7 for 70%)
FVA_PCT=0.7
# Seconds before candle close to trigger decision
DECISION_GRACE_SEC=5
# Logging level
LOG_LEVEL=info